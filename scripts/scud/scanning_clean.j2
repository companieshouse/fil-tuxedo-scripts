#!/bin/bash

# Delete image files older than the specified number of days and delete empty
# scanning directories whose names being with a defined company prefix.

# -- Internal variables -------------------------------------------------------

scan_dir="/scanning"

file_max_age_days=7

dir_prefixes=(
    "0"
    "S"
    "N"
    "BR"
    "OC"
    "FC"
    "LP"
)

# -- General ------------------------------------------------------------------

delete_scanning_files () {
    echo "Deleting scanning files:"
    find "${scan_dir}" -type f \( -name '*.TIF' -o -name '*.BSJ' \) -mtime +"${file_max_age_days}" -delete -print
    find "${scan_dir}" -type l -mtime +"${file_max_age_days}" -delete -print
}

delete_scanning_directories () {
    echo "Deleting scanning directories:"
    for prefix in "${dir_prefixes[@]}"; do
        find "${scan_dir}" -maxdepth 1 -type d -name "${prefix}"* -empty -delete -print
    done
}

# -- Entrypoint ---------------------------------------------------------------

main () {
    delete_scanning_files
    delete_scanning_directories
}

main "${@}"
